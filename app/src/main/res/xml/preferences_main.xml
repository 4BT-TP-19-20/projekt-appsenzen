<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <EditTextPreference

            android:key="pushups_per_skip"
            android:title="@string/pushups_per_skip"
            android:summary="@string/pushups_per_skip"
            android:inputType="number"
            android:defaultValue="20"
            app:icon="@drawable/ic_arrow_downward_black_24dp"
            />

    <Preference
        android:key="delete_all_data"
        app:title="@string/delete_title"
        android:summary="@string/delete_summary"
        app:icon="@drawable/ic_delete_black_24dp"
        />
    <EditTextPreference
            android:key="timetable_image_link"
            android:icon="@android:drawable/ic_menu_gallery"
            android:title="@string/timetable_image_link"
            android:summary="@string/your_link"
            android:defaultValue="http://appsenzenhostprobe.000webhostapp.com/stundenplan.png"/>


</PreferenceScreen>